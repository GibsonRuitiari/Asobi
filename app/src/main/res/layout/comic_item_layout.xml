<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:padding="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:targetApi="m">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/comics_image_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:strokeWidth="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent"
        tools:src="@drawable/sunstone"
        android:foreground="@drawable/collection_gradient_overlay"
        tools:ignore="ContentDescription,UnusedAttribute"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="w,3:2.3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:ellipsize="end"
        android:maxLines="2"
        android:padding="8dp"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="4"
        android:textAppearance="?attr/textAppearanceTitleSmall"
        android:textColor="@color/white"
        android:textSize="12sp"
        tools:visibility="visible"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/comics_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sample name" />
</androidx.constraintlayout.widget.ConstraintLayout>